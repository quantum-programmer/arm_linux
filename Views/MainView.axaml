<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:progRing="clr-namespace:AvaloniaProgressRing;assembly=AvaloniaProgressRing"
             mc:Ignorable="d" 
             d:DesignWidth="1920" 
             d:DesignHeight="1080"
             x:Class="ARM.Views.MainView"
             xmlns:viewModels="clr-namespace:ARM.ViewModels"
             xmlns:conv="clr-namespace:ARM.Converters"
             x:DataType="viewModels:MainViewModel"
             Background="#DFDFDF"
			 x:Name="Root">

    <UserControl.Styles>
        <StyleInclude Source="/Styles/Styles.axaml" />
    </UserControl.Styles>

    <UserControl.Resources>
        <conv:EarthToVisibilityConverter x:Key="EarthToVisible" />
        <conv:PositiveToBoolConverter x:Key="PositiveToBool" />
    </UserControl.Resources>

    <Grid ShowGridLines="False">
        <!-- Определение строк -->
        <Grid.RowDefinitions>
            <RowDefinition Height="100" />
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <!-- Определение столбцов -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- ШАПКА -->
        <Panel Grid.Row="0" 
               Grid.ColumnSpan="3"
               Background="#FFFFFF"
               Height="100">
            <!-- Контент шапки -->
            <StackPanel Orientation="Horizontal"
                        Margin="20"
                        Spacing="11">
                <Svg Path="/Assets/PrompriborIcon.svg"
                     Width="26" 
                     Height="26"
                     VerticalAlignment="Center" />
                <TextBlock Text="Технологический модуль"
                           FontFamily="Roboto"
                           FontWeight="700"
                           FontSize="21"
                           VerticalAlignment="Center"
                           Foreground="Black" />
            </StackPanel>

            <!-- КНОПКИ -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Spacing="5"
                        Margin="20">
              <Menu>
                <MenuItem Header="1">
                  <MenuItem Header="2"/>
                  <MenuItem Header="3"/>
                </MenuItem>              
              </Menu>
                <Button Background="Transparent"
                        Classes="Panel"
                        Command="{Binding OpenSpravocnikCommand}">
                    <Svg Path="/Assets/g1711.svg"
                         Width="17" 
                         Height="20" />
                </Button>

				<Menu Background="Transparent" Classes="Panel">
					<MenuItem ItemsSource="{Binding Reports}"
							  SelectedItem="{Binding SelectedReport}">
						<MenuItem.HeaderTemplate>
							<DataTemplate>
								<StackPanel Orientation="Horizontal">
									<Svg Path="/Assets/Document.svg" Width="17" Height="20"/>
								</StackPanel>
							</DataTemplate>
						</MenuItem.HeaderTemplate>
						<MenuItem.ItemTemplate>
							<DataTemplate>
								<MenuItem Header="{Binding Name}" 
								    Command="{Binding SelectedItem, RelativeSource={RelativeSource Self}}"
								    CommandParameter="{Binding}"/>
							</DataTemplate>
						</MenuItem.ItemTemplate>
					</MenuItem>					
				</Menu>

				<Button Background="Transparent"
                        Classes="Panel"
                        Command="{Binding OpenSettingsViewCommand}">
                    <Svg Path="/Assets/Settings.svg"
                         Width="20" 
                         Height="20" />
                </Button>
                <Button Background="Transparent"
                        Classes="Panel"
                        Command="{Binding OpenInfoViewCommand}">
                    <Svg Path="/Assets/InfoCircle.svg"
                         Width="20" 
                         Height="20" />
                </Button>
                <Button Background="Transparent" 
                        Padding="5"
                        Classes="Panel">
                    <Svg Path="/Assets/Notiffication.svg"
                         Width="24" 
                         Height="24" />
                </Button>
                <StackPanel Orientation="Horizontal"
                            Spacing="5">
                    <Button Background="#898989"
                            Classes="Panel">
                        <Svg Path="/Assets/User.svg"
                             Width="24" 
                             Height="24" />
                    </Button>
                    <StackPanel>
                        <TextBlock HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   Text="asdas dasd"
                                   Classes="User1" />
                        <TextBlock HorizontalAlignment="Left"
                                   VerticalAlignment="Center"
                                   Text="asdasdasd"
                                   Classes="User2" />
                    </StackPanel>
                </StackPanel>
            </StackPanel>
        </Panel>

        <Separator Grid.ColumnSpan="3"
                   VerticalAlignment="Bottom"
                   Margin="0 10 0 0" />

        <!-- Мнемосхемы -->
        <GroupBox Grid.Row="2" 
                  Grid.ColumnSpan="3"
                  Header="Мнемосхемы"
                  Foreground="Black"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  Margin="10"
                  FontSize="17"
                  FontWeight="500"
                  FontFamily="SF Pro Display">
            <TabControl TabStripPlacement="Top"
                        Margin="-5">
                <!-- Автоцистерны -->
                <TabItem Header="Автоцистерны"
                         IsVisible="{Binding AutoCisternGroups.Count, Converter={StaticResource PositiveToBool}}">
                    <ScrollViewer HorizontalScrollBarVisibility="Auto">
                        <StackPanel Margin="10" 
                                    Spacing="50">
                            <!-- Группировка по Side -->
                            <ItemsControl ItemsSource="{Binding AutoCisternGroups}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,5,20">
                                            <!-- Заголовок группы -->
                                            <TextBox Foreground="Black"
                                                     Text="{Binding Side}"
                                                     Width="227" 
                                                     Height="40"
                                                     BorderThickness="2 2 2 0" 
                                                     BorderBrush="#4D4D4D"
                                                     FontWeight="900" 
                                                     FontFamily="arial" 
                                                     FontSize="22" 
                                                     CornerRadius="0"
                                                     HorizontalAlignment="Center" 
                                                     VerticalAlignment="Center"
                                                     VerticalContentAlignment="Center"
                                                     HorizontalContentAlignment="Center" />
                                            <!-- Посты -->
                                            <ItemsControl ItemsSource="{Binding Posts}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="#4D4D4D"
                                                                BorderThickness="2"
                                                                Tag="{Binding Earth}" Height="150">
                                                            <StackPanel>
                                                                <!-- Развёрнутый пост -->
                                                              <Button Command="{Binding SelectPostCommand}" BorderThickness="0">
                                                                <StackPanel IsVisible="{Binding Earth, Converter={StaticResource EarthToVisible}}">
                                                                    <DockPanel LastChildFill="True"
                                                                               Height="140" 
                                                                               Width="227">
                                                                        <Panel>
                                                                            <TextBox HorizontalAlignment="Center"
                                                                                     VerticalAlignment="Top"
                                                                                     Text="{Binding VehicleNumber}"
                                                                                     BorderThickness="0"
                                                                                     Background="#DDDDDD"
                                                                                     FontFamily="SF Pro DIsplay"
                                                                                     FontWeight="700"
                                                                                     FontSize="16" />
                                                                            <Svg Path="/Assets/ASNAvto.svg"
                                                                                 Width="57.26"
                                                                                 Height="59.96"
                                                                                 VerticalAlignment="Center"
                                                                                 HorizontalAlignment="Center" />
                                                                            <TextBox Foreground="Black"
                                                                                     Text="{Binding DriverName}"
                                                                                     VerticalAlignment="Bottom"
                                                                                     HorizontalAlignment="Left"
                                                                                     Background="#DDDDDD"
                                                                                     Margin="2 0 0 4"
                                                                                     BorderThickness="0"
                                                                                     FontFamily="SF Pro DIsplay"
                                                                                     FontWeight="700"
                                                                                     FontSize="16" />
                                                                            <TextBox Foreground="Black"
                                                                                     Text="{Binding VolumeInfo}"
                                                                                     Background="#DDDDDD"
                                                                                     VerticalAlignment="Bottom"
                                                                                     BorderThickness="2 2 2 0"
                                                                                     BorderBrush="#4D4D4D"
                                                                                     HorizontalAlignment="Right"
                                                                                     CornerRadius="5 0 0 0"
                                                                                     Margin="0 0 0 0"
                                                                                     MinHeight="23"
                                                                                     MinWidth="68"
                                                                                     Height="25"
                                                                                     LineHeight="1"
                                                                                     Padding="0"
                                                                                     FontSize="16"
                                                                                     FontWeight="700"
                                                                                     FontFamily="arial"
                                                                                     HorizontalContentAlignment="Center"
                                                                                     VerticalContentAlignment="Center" />
                                                                            <TextBox Text="{Binding Dose}"
                                                                                     HorizontalAlignment="Right"
                                                                                     VerticalAlignment="Top"
                                                                                     Background="Transparent"
                                                                                     BorderThickness="2 0 0 2"
                                                                                     BorderBrush="#4D4D4D"
                                                                                     CornerRadius="0 0 0 5"
                                                                                     MinHeight="23"
                                                                                     MinWidth="68"
                                                                                     Height="25"
                                                                                     Padding="0"
                                                                                     LineHeight="3"
                                                                                     FontSize="16"
                                                                                     FontWeight="700"
                                                                                     FontFamily="arial"
                                                                                     HorizontalContentAlignment="Center"
                                                                                     VerticalContentAlignment="Center" />
                                                                            <StackPanel Orientation="Vertical">
                                                                                <TextBox Foreground="Black"
                                                                                         Text="{Binding PostNumber}"
                                                                                         Background="#DDDDDD"
                                                                                         Margin="0 0 0 0"
                                                                                         VerticalAlignment="Top"
                                                                                         BorderThickness="2 0 2 2"
                                                                                         BorderBrush="#4D4D4D"
                                                                                         CornerRadius="0 0 5 0"
                                                                                         HorizontalAlignment="Left"
                                                                                         MinHeight="40"
                                                                                         MinWidth="48"
                                                                                         Height="40"
                                                                                         Width="48"
                                                                                         FontSize="20"
                                                                                         FontWeight="700"
                                                                                         FontFamily="arial"
                                                                                         HorizontalContentAlignment="Center"
                                                                                         VerticalContentAlignment="Center" />
                                                                                <TextBox Text="{Binding FuelType}"
                                                                                         HorizontalAlignment="Left"
                                                                                         VerticalAlignment="Top"
                                                                                         Background="Transparent"
                                                                                         BorderThickness="0 0 2 2"
                                                                                         Margin="0 -4 0 0"
                                                                                         BorderBrush="#4D4D4D"
                                                                                         CornerRadius="0 0 5 0"
                                                                                         MinHeight="43"
                                                                                         MinWidth="48"
                                                                                         Height="43"
                                                                                         FontSize="20"
                                                                                         FontFamily="arial"
                                                                                         FontWeight="700"
                                                                                         HorizontalContentAlignment="Center"
                                                                                         VerticalContentAlignment="Center" />
                                                                            </StackPanel>
                                                                            <ProgressBar Orientation="Vertical"
                                                                                         MinHeight="90" 
                                                                                         MinWidth="34"
                                                                                         Margin="0 0 0 0"
                                                                                         Background="#DFDFDF"
                                                                                         Foreground="#4D4D4D"
                                                                                         HorizontalAlignment="Right"
                                                                                         CornerRadius="0"
                                                                                         BorderThickness="2 0 2 0"
                                                                                         BorderBrush="#4D4D4D"
                                                                                         Minimum="0" 
                                                                                         Maximum="100" 
                                                                                         Value="45" />
                                                                            <progRing:ProgressRing
                                                                                Width="21.92"
                                                                                Height="21.92"
                                                                                IsActive="True"
                                                                                HorizontalAlignment="Right"
                                                                                VerticalAlignment="Center"
                                                                                Foreground="CornflowerBlue"
                                                                                Margin="0,0,6,0" />
                                                                        </Panel>
                                                                    </DockPanel>
                                                                </StackPanel>
                                                              </Button>

                                                                <!-- Свернутый пост -->
                                                                <StackPanel Orientation="Horizontal"
                                                                            IsVisible="{Binding Earth, Converter={StaticResource EarthToVisible}, ConverterParameter=invert}">
                                                                    <StackPanel>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox Text="{Binding PostNumber}"
                                                                                     MinHeight="35" 
                                                                                     MinWidth="46"
                                                                                     BorderThickness="0 0 2 2"
                                                                                     Classes="HidePost" />
                                                                            <TextBox Text="{Binding FuelType}"
                                                                                     BorderThickness="0 0 2 2"
                                                                                     MinHeight="35" 
                                                                                     Width="179"
                                                                                     Background="#DDDDDD"
                                                                                     Classes="HidePost" />
                                                                        </StackPanel>
                                                                        <StackPanel Orientation="Horizontal">
                                                                            <TextBox Text="{Binding PostNumber}"
                                                                                     MinHeight="35" 
                                                                                     MinWidth="46"
                                                                                     BorderThickness="0 0 2 2"
                                                                                     Classes="HidePost" />
                                                                            <TextBox Text="{Binding FuelType}"
                                                                                     MinHeight="35" 
                                                                                     Width="179"
                                                                                     BorderThickness="0 0 2 2"
                                                                                     Background="#DDDDDD"
                                                                                     Classes="HidePost" />
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Дозаторы присадок -->
                <TabItem Header="Дозаторы присадок"
                         IsVisible="{Binding DispenserGroups.Count, 
                         Converter={StaticResource PositiveToBool}}">
                    <ScrollViewer>
                        <StackPanel Margin="10">
                            <!-- Группировка по Side -->
                            <ItemsControl ItemsSource="{Binding DispenserGroups}">
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <StackPanel Orientation="Horizontal" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel Margin="0,0,0,20">
                                            <!-- Заголовок группы -->
                                            <TextBox HorizontalAlignment="Center"
                                                     Text="{Binding Side}"
                                                     FontSize="20"
                                                     FontWeight="Bold"
                                                     BorderThickness="2"
                                                     BorderBrush="#4D4D4D" />
                                            <!-- Посты -->
                                            <ItemsControl ItemsSource="{Binding Posts}">
                                                <ItemsControl.ItemsPanel>
                                                    <ItemsPanelTemplate>
                                                        <StackPanel />
                                                    </ItemsPanelTemplate>
                                                </ItemsControl.ItemsPanel>
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="Gray"
                                                                BorderThickness="1"
                                                                Padding="10">
                                                            <StackPanel>
                                                                <!-- Дозатор присадок -->
                                                                <StackPanel>
                                                                    <TextBox Text="{Binding PostNumber}"
                                                                             FontWeight="Bold"
                                                                             HorizontalAlignment="Center" />
                                                                    <TextBox Text="{Binding VehicleNumber}" />
                                                                    <TextBox Text="{Binding DriverName}" />
                                                                    <TextBox Text="{Binding FuelType}" />
                                                                    <TextBox Text="{Binding VolumeInfo}" />
                                                                    <Svg Path="/Assets/PrompriborIcon.svg"
                                                                         Width="26"
                                                                         Height="26"
                                                                         VerticalAlignment="Center" />
                                                                    <ProgressBar Foreground="Black"
                                                                        Minimum="0"
                                                                        Maximum="{Binding Dose}"
                                                                        Value="{Binding Volume}"
                                                                        Height="20"
                                                                        Margin="0,10,0,0" />
                                                                </StackPanel>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </StackPanel>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>
        </GroupBox>

        <!-- Первый GridSplitter (по высоте) -->
        <GridSplitter Grid.Row="3" 
                      Grid.ColumnSpan="3" 
                      Grid.Column="0"
                      Height="5"
                      ResizeDirection="Rows"
                      Background="#CCCCCC"
                      HorizontalAlignment="Stretch" />

        <!-- Управление выбранным постом -->
        <GroupBox Grid.Row="4" 
                  Grid.Column="0"
                  Header="Управление выбранным постом"
                  Margin="10"
                  Foreground="Black"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch"
                  FontSize="17"
                  FontWeight="500"
                  FontFamily="SF Pro Display">
            <!-- Контент управления постом -->
            <Grid ShowGridLines="False">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="26" />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0" 
                            Orientation="Horizontal"
                            Spacing="5">
                    <TextBlock Text="Пост" Classes="Post"/>
                    <TextBlock Text="{Binding SelectedPost.PostNumber}"
                               Classes="Post" />
                    <TextBlock Text="Налив - Ожидание"
                               Classes="Post" />
                    <TextBlock Text="Задание по документу № 7584 - выполняется "
                               Margin="350 0 0 0"
                               Foreground="#0066CC"
                               Classes="Task" />
                </StackPanel>
                <TextBlock Grid.Row="1"
                           Grid.ColumnSpan="3"
                           Text="Рабочее состояние"
                           Classes="State" />
                <StackPanel Grid.Row="2"
                            Orientation="Horizontal"
                            Spacing="10">
                    <StackPanel Orientation="Horizontal"
                                Spacing="5">
                        <Button Width="144"
                                Height="40"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Classes="Permission">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="15">
                                <TextBlock Text="Разрешение" />
                                <Svg Path="/Assets/Vector1.svg"
                                     Height="16" />
                            </StackPanel>
                        </Button>
                        <Button Width="147"
                                Height="40"
                                HorizontalContentAlignment="Left"
                                VerticalContentAlignment="Center"
                                Classes="Continue">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="30">
                                <TextBlock Text="Продолж." />
                                <Svg Path="/Assets/Group965.svg"
                                     Height="16" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <StackPanel Orientation="Horizontal"
                                    Spacing="-1">
                            <TextBox Width="146" 
                                     Height="40"
                                     Text="Минимальная доза присадки"
                                     HorizontalContentAlignment="Center" 
                                     VerticalContentAlignment="Center"
                                     Classes="GroupPost" />

                            <TextBox Width="119" 
                                     Height="40"
                                     Text="0,5"
                                     HorizontalContentAlignment="Center" 
                                     VerticalContentAlignment="Center"
                                     Background="#FFFFFF"
                                     Classes="GroupPost" />
                            <TextBox MinWidth="33" 
                                     Width="33" 
                                     Height="40"
                                     Text="кг/л³"
                                     FontSize="11"
                                     HorizontalContentAlignment="Center" 
                                     VerticalContentAlignment="Center"
                                     Background="#FFFFFF"
                                     Classes="GroupPost" />
                        </StackPanel>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Заземление"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="рабочее"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox MinWidth="33" 
                                 Width="33" 
                                 Height="40"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="3"
                            Orientation="Horizontal"
                            Spacing="10">
                    <StackPanel Orientation="Horizontal"
                                Spacing="5">
                        <Button Width="144"
                                Height="40"
                                Classes="Pause">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="65">
                                <TextBlock Text="Пауза" />
                                <Svg Path="/Assets/Group960.svg"
                                     Height="16" />
                            </StackPanel>
                        </Button>
                        <Button Width="147"
                                Height="40"
                                Classes="Stop">
                            <StackPanel Orientation="Horizontal"
                                        Spacing="40">
                                <TextBlock Text="Останов." />
                                <Svg Path="/Assets/Vector2.svg"
                                     Height="16" />
                            </StackPanel>
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Предел. разн. присад."
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="0,7"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                        <TextBox MinWidth="33" 
                                 Width="33" 
                                 Height="40"
                                 Text="кг/л³"
                                 FontSize="11"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Заземление"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="не установлено"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox MinWidth="33" 
                                 Width="33" 
                                 Height="40"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="4"
                            Orientation="Horizontal"
                            Spacing="10">
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Сумматор объема"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="99999999999"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                        <TextBox MinWidth="33" 
                                 Width="33" 
                                 Height="40"
                                 Text="л"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Режим управления"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="По рецептам"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                        <Button Width="33" 
                                Height="40"
                                Classes="Settings2">
                            <Svg Path="/Assets/Settings.svg"
                                 Width="20" 
                                 Height="20" />
                        </Button>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Переполнение"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="да"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox MinWidth="33" 
                                 Width="33" 
                                 Height="40"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                    </StackPanel>
                </StackPanel>
                <StackPanel Grid.Row="5"
                            Orientation="Horizontal"
                            Spacing="10">
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Фактический объем"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="8964"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                        <TextBox MinWidth="33" 
                                 Width="33" 
                                 Height="40"
                                 Text="л"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Spacing="-1">
                        <TextBox Width="146" 
                                 Height="40"
                                 Text="Управление треб. расходом"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Classes="GroupPost" />
                        <TextBox Width="119" 
                                 Height="40"
                                 Text="По режиму"
                                 HorizontalContentAlignment="Center" 
                                 VerticalContentAlignment="Center"
                                 Background="#FFFFFF"
                                 Classes="GroupPost" />
                        <Button Width="33"
